@page
@model TorneoFutbol.App.Frontend.Pages.Arbitros.IndexModel
@{
}
<h1>Listado de Arbitros</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Telefono</th>
            <th scope="col">Colegio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arbitro in Model.arbitros)
        {
            <tr>
                <td>@arbitro.Nombre</td>
                <td>@arbitro.Documento</td>
                <td>@arbitro.Telefono</td>
                <td>@arbitro.Colegio</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@arbitro.Id">Detalles</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@arbitro.Id">Modificar</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>