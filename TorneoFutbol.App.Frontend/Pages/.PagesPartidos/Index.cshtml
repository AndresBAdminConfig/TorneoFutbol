@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Pages.Partidos.IndexModel
@{
}
<h1>Listado de Partidos</h1>
<a class="btn btn.btn-primary" asp-page="./Create">Nuevo Partido</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">FechaHora</th>
            <th scope="col">EquipoLocal</th>
            <th scope="col">EquipoVisitante</th>
            <th scope="col">MarcadorInicial</th>
            <th scope="col">MarcadorFinal</th>
            <th scope="col">Colegio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    </tbody>
        @foreach (var partido in Model.partidos)
        {
            <tr>
                <td>@partidos.FechaHora</td>
                <td>@partidos.EquipoLocal</td>
                <td>@partidos.EquipoVisitante</td>
                <td>@partidos.MarcadorInicial</td>
                <td>@partidos.MarcadorFinal</td>
                <td>@partidos.Colegio</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-rute-id="@partido.Id">Detalle</a>
                    <a class="btn btn-secundary" asp-page="./Edit" asp-rute-id="@partido.Id">Editar</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<form method="get">
    <div class="form-group">
        <label for="c">Colegio</label>
        <select name="c" id="c" asp-items="GetList<Colegio>()" class="form-control" asp-for="@Model.cActual">
            <option value="-1">Ver Todos</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>