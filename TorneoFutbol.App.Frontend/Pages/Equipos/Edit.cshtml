@page
@using TorneoFutbol.App.Dominio
@model TorneoFutbol.App.Frontend.Equipos.EditModel
@{
}
<h1>Editar Equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id"></label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control">
        <span asp-validation-for="equipo.Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Editar Equipo</button>
</form>
<a class="btn btn-success" asp-page="./Index">Volver</a>
