@page
@model TorneoFutbol.App.Frontend.Pages.DesempeñoEquipo.IndexModel
@{
}
<h1>Listado de Partidos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Cantidad_Partidos_Jugados</th>
            <th scope="col">Cantidad_Partidos_Ganados</th>
            <th scope="col">Cantidad_Partidos_Empatados</th>
            <th scope="col">GF</th>
            <th scope="col">GC</th>
            <th scope="col">Puntos</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    </tbody>
        @foreach (var Desempeño in Model.Desempeño)
        {
            <tr>
                <td>@Desempeño.Cantidad_Partidos_Jugados</td>
                <td>@Desempeño.Cantidad_Partidos_Ganados</td>
                <td>@Desempeño.Cantidad_Partidos_Empatados</td>
                <td>@Desempeño.GF</td>
                <td>@Desempeño.GC</td>
                <td>@Desempeño.Puntos</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-rute-id="@Desempeño.Id">
                        Detalle
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>