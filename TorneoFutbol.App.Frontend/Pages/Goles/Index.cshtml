@page
@model TorneoFutbol.App.Frontend.Pages.Goles.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Gol</a><br><br>
<h1>Listado de Goles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Minuto del Gol</th>
        </tr>
    </thead>
    </tbody>
        @foreach (var gol in Model.goles)
        {
            <tr>
                <td>@gol.MinutoGol</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@gol.Id">Detalle</a>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@gol.Id">Modificar</a>
                </td>
            </tr>
        }
    </tbody>
</table>