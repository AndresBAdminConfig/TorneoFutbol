@page
@model TorneoFutbol.App.Frontend.Pages.Reportes.IndexModel
@{
}
<td><a class="btn btn-primary" asp-page = "./Create"> Crear Reporte</a></td>
<h1>Listado de Reportes</h1>
<table class="table">
        <thead>
            <tr>
                <th scope="col">Marcador Final</th>
                <th scope="col">Tarjetas Amarillas</th>
                <th scope="col">Tarjetas Rojas</th>
                <th scope="col">Acciones</th>

            </tr>
        </thead>
        </tbody>
            @foreach (var reporte in Model.reportes)
            {
                <tr>
                    <td>@reporte.MarcadorFinal</td>
                    <td>@reporte.TarjetasAmarillas</td>
                    <td>@reporte.TarjetasRojas</td>
                    <td>
                        <a class="btn btn-secondary" asp-page = "./Details" asp-route-id="@reporte.Id"> Detalle</a>
                        <a class="btn btn-primary" asp-page = "./Edit" asp-route-id="@reporte.Id"></a>
                    </td>
                </tr>
            }
        </tbody>
</table>